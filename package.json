{
  "name": "@codemastersolutions/commitzero",
  "version": "0.0.25",
  "description": "Conventional Commits validator with a friendly CLI, Git hooks, and an internal rule engine â€” zero runtime dependencies.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://github.com/codemastersolutions/commitzero#readme",
  "bugs": {
    "url": "https://github.com/codemastersolutions/commitzero/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codemastersolutions/commitzero.git"
  },
  "keywords": [
    "conventional commits",
    "conventional",
    "commits",
    "commitizen",
    "commitlint",
    "git hooks",
    "cli",
    "codemastersolutions",
    "codemaster",
    "commitzero",
    "code",
    "codemaster solutions",
    "codemaster solucoes",
    "solucoes"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs && node scripts/postbuild-cjs.js",
    "clean": "rm -rf dist",
    "pretest": "npm run build",
    "test": "node --import tsx --test test/unit/select.test.ts test/unit/formatter.test.ts test/unit/rules.test.ts test/unit/parser.test.ts test/integration/cleanup.test.ts test/integration/cli.test.ts test/integration/precommit.test.ts && COMMITSKIP_SELECT_PROMPT=1 node --import tsx --test test/unit/commit.test.ts",
    "coverage": "npm run build && COMMITSKIP_ADD_PROMPT=1 c8 -r text-summary node --import tsx --test test/unit/select.test.ts test/unit/formatter.test.ts test/unit/rules.test.ts test/unit/parser.test.ts test/integration/cleanup.test.ts test/integration/cli.test.ts test/integration/precommit.test.ts",
    "coverage:subset": "npm run build && c8 -r text-summary node --import tsx --test test/unit/select.test.ts test/unit/formatter.test.ts test/integration/cleanup.test.ts test/integration/cli.test.ts test/integration/precommit.test.ts",
    "verify:readmes": "node scripts/verify-readmes.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "comments:strip": "node scripts/strip-comments.js && npm run format",
    "simulate:release": "node scripts/simulate-release.js",
    "postinstall": "node ./scripts/postinstall-shim.js",
    "preuninstall": "node ./scripts/cleanup-shim.js || true",
    "uninstall": "node ./scripts/cleanup-shim.js || true",
    "postuninstall": "node ./scripts/cleanup-shim.js || true",
    "commitzero": "commitzero",
    "commitzero:install": "npm run commitzero install-hooks",
    "commitzero:uninstall": "npm run commitzero uninstall-hooks",
    "commit": "npm run commitzero commit",
    "commit:push": "npm run commitzero commit --push"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "bin": {
    "commitzero": "./dist/cjs/cli/index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist/",
    "scripts/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@codemastersolutions/commitzero": "^0.0.26",
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.2",
    "c8": "^10.1.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "fast-glob": "^3.3.3",
    "prettier": "^3.6.2",
    "strip-comments": "^2.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.46.0"
  }
}
