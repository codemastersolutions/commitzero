{
  "name": "@codemastersolutins/commitzero",
  "version": "0.0.4",
  "description": "Conventional Commits validator with a CLI, Git hooks, and an internal rule engine â€” zero runtime dependencies.",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs && node scripts/postbuild-cjs.js",
    "clean": "rm -rf dist",
    "pretest": "npm run build",
    "test": "node --test",
    "verify:readmes": "node scripts/verify-readmes.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "simulate:release": "node scripts/simulate-release.js"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "bin": {
    "commitzero": "./dist/cjs/cli/index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.46.0"
  }
}
